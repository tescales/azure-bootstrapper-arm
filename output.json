{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "gitHubUser": {
            "type": "string",
            "metadata": {
                "description": "Your GitHub username"
            },
            "defaultValue": "tescales"
        },
        "gitHubRepo": {
            "type": "string",
            "metadata": {
                "description": "Your GitHub repo"
            },
            "defaultValue": "azure-bootstrapper-arm"
        },
        "environmentVars": {
            "type": "array",
            "metadata": {
                "description": "Pass additional parameters to the bootstrap.sh script."
            },
            "defaultValue": [ { "name": "test", "value": "tested" }, { "name": "test2", "value": "testing" } ]
        }
    },
    "variables": {
        "nativeEnvironmentVariables": [
            {
                "name": "THIS_REPO",
                "value": "[concat(variables('thisRepoUser'), '/', variables('thisRepo'))]"
            },
            {
                "name": "AZURE_RESOURCE_GROUP",
                "value": "[resourceGroup().name]"
            },
            {
                "name": "AZURE_LOCATION",
                "value": "[resourceGroup().location]"
            }
        ],
        "thisRepoUri": "[if(contains(deployment().properties, 'templateLink'), deployment().properties.templateLink.uri, 'https://raw.githubusercontent.com/tescales/azure-bootstrapper-arm/master')]",
        "thisRepoUser": "[take(skip(array(split(variables('thisRepoUri'), '/')),3),1)[0]]",
        "thisRepo": "[take(skip(array(split(variables('thisRepoUri'), '/')),4),1)[0]]",
            "copy": [
                {
                    "name": "passedEnvironVars",
                    "count": "[length(parameters('environmentVars'))]",
                    "input": {
                        "name": "[parameters('environmentVars')[copyIndex('passedEnvironVars')].name]",
                        "value": "[parameters('environmentVars')[copyIndex('passedEnvironVars')].value]"
                    }
                }
            ],
        "environmentVariables": "[union(variables('passedEnvironVars'),  variables('nativeEnvironmentVariables'))]",

        "ghURL": "[concat('https://raw.githubusercontent.com/', parameters('gitHubUser'), '/', parameters('gitHubRepo'), '/master')]",
        "ghArray": "[take(skip(array(split(variables('ghURL'), '/')),3),2)]",
        "ghCreateArray": "[createArray(split(variables('ghURL'),'/'))]"
    },
    "resources": [
    ],
    "outputs": {
        "envVars": {
            "type": "array",
            "value": "[variables('environmentVariables')]"
        },
        "ghCreateArray": {
            "type": "string",
            "value": "[variables('thisRepoUri')]"
        }
    }
}
